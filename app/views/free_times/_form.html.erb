<h2>When are you free for lunch?</h2>

<div id="time-table">
<div class="time-axis">
  <% (10..15).each do |i| %>
    <div class="time-label">
      <% if i < 12 %>
        <%= i %>
      <% elsif i == 12 %>
        Noon
      <% else %>
        <%= i-12 %>
      <% end %>
      <%= " AM" if i < 12 %>
      <%= " PM" if i > 12 %>
    </div>
  <% end %>
</div>

<div class ="week">
  <div class="day-axis">
    <% days = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"] %>
    <% days.each_with_index do |day, i| %>
      <div id="day<%=i%>" class="day"> <%= day %> </div>
    <% end %>
  </div>
  <% (0..23).each do |i| %>
    <div id="row<%=i%>" class="time">
      <% (0..6).each do |j| %>
        <% klass = days[j] + " slot" %>
	<% klass += " right" if j == 6 %>
	<% klass += " top" if i % 4 == 0 %>
	<% klass += " top dotted" if i % 4 == 2 %>
	<% klass += " bottom" if i == 23 %>

        <% if current_user %>
          <% current_user.free_times.where(day: j).each do |ft| %>
            <% time = 10+i/4.0 %>
            <% if time >= ft.time && time < ft.time + ft.duration %>
              <% klass += " selected" %>
            <% end %>
          <% end %>
        <% end %>

	<div id="<%=days[j]%>-<%=(10+0.25*i)%>" class="<%=klass%>"></div>
      <% end %>
    </div>
  <% end %>
</div>
</div>
<%= link_to "Submit", "#", id: "timeslot-submit-button", class:"btn"%>
